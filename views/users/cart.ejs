<%- include('../layouts/header') %>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/"><i class="fa fa-home"></i> Home</a>
                    <span>Shopping cart</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (cartItems && cartItems.length > 0) { %>
                                <% cartItems.forEach(cartItem => { %>
                                    <tr data-productId="<%= cartItem.product[0].productId %>">
                                        <td class="cart__product__item">
                                            <% if (cartItem.product && cartItem.product[0] && cartItem.product[0].productId) { %>
                                                <img src="/uploads/products/<%= cartItem.product[0].productId.mainImage %>" alt="">
                                                <div class="cart__product__item__title">
                                                    <h6><%= cartItem.product[0].productId.name %></h6>
                                                    <div class="rating">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <span>No product information available</span>
                                            <% } %>
                                        </td>
                                        <td class="cart__price">₹ <span class="price" data-price="<%= cartItem.product[0].price %>"><%= cartItem.product[0].price %></span></td>
                                        <td class="cart__quantity">
                                            <div class="quantity-wrapper" style="display: flex; align-items: center;">
                                                <div class="quantity-btn minus-btn" data-product-id="<%= cartItem.product[0].productId %>" style="padding: 5px 10px; font-weight: bold; cursor: pointer;">-</div>
                                                <div class="quantity" style="padding: 5px 10px;"><%= cartItem.product[0].quantity %></div>
                                                <div class="quantity-btn plus-btn" data-product-id="<%= cartItem.product[0].productId %>" style="padding: 5px 10px; font-weight: bold; cursor: pointer;">+</div>
                                            </div>
                                        </td>
                                        <td class="cart__total" id="cart__total_<%= cartItem.product[0].productId %>">₹ <span class="total" data-id="<%= cartItem.product[0].productId %>"><%= (cartItem.product[0].price * cartItem.product[0].quantity).toFixed(2) %></span></td>
                                        <td class="cart__close">
                                            <a href="#" class="remove-btn" data-product-id="<%= cartItem.product[0].productId._id %>">
                                                <span class="icon_close"></span>
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5">No products in the cart</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn">
                    <a href="/shop">Continue Shopping</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="discount__content">
                    <h6>Discount codes</h6>
                    <form action="#">
                        <input type="text" placeholder="Enter your coupon code">
                        <button type="submit" class="site-btn">Apply</button>
                    </form>
                </div> 
            </div>
            <div class="col-lg-4 offset-lg-2">
                <div class="cart__total__procced">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Subtotal <span id="subtotal">₹ <%= cartItems.reduce((acc, item) => acc + (item.product[0].price * item.product[0].quantity), 0).toFixed(2) %></span></li>
                        <li>Total <span id="total">₹ <%= cartItems.reduce((acc, item) => acc + (item.product[0].price * item.product[0].quantity), 0).toFixed(2) %></span></li>
                    </ul>
                    <a href="/checkout" >Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Cart Section End -->

<%- include('../layouts/footer') %>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">




<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const plusButtons = document.querySelectorAll('.plus-btn');
        const minusButtons = document.querySelectorAll('.minus-btn');
        const removeButtons = document.querySelectorAll('.remove-btn');
        const proceedToCheckoutButton = document.getElementById('proceedToCheckout');

        plusButtons.forEach(button => {
            button.addEventListener('click', function() {
                const quantityElement = this.closest('.cart__quantity').querySelector('.quantity');
                let quantity = parseInt(quantityElement.textContent);
                if (quantity < 4) {
                    quantityElement.textContent = ++quantity;
                    const productId = this.dataset.productId;
                    updateCart(productId, 1);
                } else {
                    toastr.warning('You cannot add more than 4 items.', 'Limit Reached');
                }
            });
        });

        minusButtons.forEach(button => {
            button.addEventListener('click', function() {
                const quantityElement = this.closest('.cart__quantity').querySelector('.quantity');
                let quantity = parseInt(quantityElement.textContent);
                if (quantity > 1) {
                    quantityElement.textContent = --quantity;
                    const productId = this.dataset.productId;
                    updateCart(productId, -1);
                }
            });
        });

        removeButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const productId = this.dataset.productId;
                Swal.fire({
                    title: 'Are you sure want to delete this from cart ?',
                    text: 'This action cannot be undone!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, remove it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        removeFromCart(productId);
                    }
                });
            });
        });

      


        function updateCart(productId, quantityChange) {
            $.ajax({
                type: 'POST',
                url: '/updateCartItem',
                data: { productId: productId, quantityChange: quantityChange },
                success: function(response) {
                    window.location.reload();
                    $('#subtotal').text('₹ ' + response.subtotal.toFixed(2));
                    $('#total').text('₹ ' + response.total.toFixed(2));
                    const productRow = $('tr[data-productId="' + productId + '"]');
                    const newQuantity = response.cartItems.find(item => item.product[0].productId === productId).product[0].quantity;
                    const productTotal = parseFloat(productRow.find('.cart__price.price').data('price')) * newQuantity;
                    productRow.find('.cart__total.total').text('₹ ' + productTotal.toFixed(2));
                },
                error: function(error) {
                    console.error('Error updating cart quantity:', error);
                }
            });
        }

        function removeFromCart(productId) {
            $.ajax({
                type: 'POST',
                url: '/removeCartItem',
                data: { productId: productId },
                success: function(response) {
                    Swal.fire({
                        title: 'Success!',
                        text: 'Item removed from cart successfully.',
                        icon: 'success',
                        showConfirmButton: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.reload();
                        }
                    });
                },
                error: function(error) {
                    console.error('Error removing product from cart:', error);
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to remove item from cart.',
                        icon: 'error'
                    });
                }
            });
        }




  
});
 

</script>
