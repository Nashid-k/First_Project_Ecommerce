<script>
  document.addEventListener("DOMContentLoaded", function() {
    console.log("Document loaded"); 

    const thumbnailImages = document.querySelectorAll('.product__details__pic__left img.pt');
    const mainImage = document.querySelector('.product__big__img');

    thumbnailImages.forEach(function(thumbnail) {
        thumbnail.addEventListener('click', function() {
            console.log("Thumbnail clicked"); // Check if clicking on thumbnails triggers the event

            thumbnailImages.forEach(function(img) {
                img.classList.remove('active');
            });

            thumbnail.classList.add('active');

            console.log("Main image source:", thumbnail.src); // Check if the main image source is being updated correctly
            mainImage.src = thumbnail.src;

            $('.zoomImg').attr('src', thumbnail.src);

            console.log("Zoom image source updated");

            $('.product__big__img').trigger('zoom.destroy').zoom({
                on: 'mouseover',
                magnify: 1.5
            });

            console.log("Zoom initialized");
        });
    });

    $('.product__big__img').zoom({
        on: 'mouseover',
        zoomWidth: 400,
        tint: "#333",
        Xoffset: 15
    });

    console.log("Zoom initialized for main image");
});

</script>
