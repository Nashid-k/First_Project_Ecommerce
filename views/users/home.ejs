<section class="discount">
    <div class="container">
        <div class="row">
            <% 
            let activeOffer = null;
            let offerEndDate = null;
            let discountValue = 0;
            let imageSource = null;

            // Check for active product offers
            const activeProductOffer = productData.find(product => product.offerTime && product.offerTime.status === 'active');
            
            if (activeProductOffer) {
                activeOffer = activeProductOffer;
                offerEndDate = activeProductOffer.offerTime.endDate;
                discountValue = activeProductOffer.discount;
                imageSource = activeProductOffer.mainImage;
            } else if (modifiedCategoryOffers.length > 0) {
                // If no active product offer, check for active category offers
                const activeCategoryOffer = modifiedCategoryOffers[0];
                activeOffer = activeCategoryOffer;
                offerEndDate = activeCategoryOffer.endDate;
                discountValue = activeCategoryOffer.discountValue;
                const randomProduct = productData.find(product => product.category.toString() === activeCategoryOffer.categoryId.toString());
                imageSource = randomProduct ? randomProduct.mainImage : null;
            }

            if (activeOffer) {
            %>
                <div class="col-lg-6 p-0">
                    <div class="discount__pic">
                        <% if (imageSource) { %>
                            <img src="<%= imageSource %>" alt="Offer Image">
